<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2">
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">
        <TextView
            android:id="@+id/sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="48dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#ffffff">
        </TextView>
        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/sign_title"
            android:inputType="phone"
            android:hint="账号"
            android:gravity="center"
            android:textColorHint="@color/blueGrey"
            android:background="@drawable/shape_corner"
            android:layout_marginTop="20dp"
            ></EditText>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/account"
            android:inputType="numberPassword"
            android:background="@drawable/shape_corner"
            android:hint="密码"
            android:gravity="center"
            android:textColorHint="@color/blueGrey"
            android:layout_marginTop="20dp"
            ></EditText>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_corner_lightblue"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password"
            android:layout_marginTop="20dp"
            android:text="登录"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"></Button>
        <TextView
            android:id="@+id/btn_forgetpwd"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_submit"
            android:layout_marginTop="20dp"
            android:text="忘记密码"
            android:textColor="@color/blueGrey"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/btn_toregist"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_submit"
            android:layout_marginTop="20dp"
            android:text="用户注册"
            android:textColor="@color/blueGrey"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="18dp"></TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_name"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"></TextView>
</RelativeLayout>
