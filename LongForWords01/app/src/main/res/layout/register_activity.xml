<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue">
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">
        <TextView
            android:id="@+id/sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="48dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#ffffff">
        </TextView>
        <EditText
            android:id="@+id/re_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/sign_title"
            android:inputType="text"
            android:hint="昵称"
            android:gravity="center"
            android:textColorHint="@color/blueGrey"
            android:background="@drawable/shape_corner"
            android:layout_marginTop="20dp"
            ></EditText>
        <EditText
            android:id="@+id/re_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/re_name"
            android:inputType="phone"
            android:hint="手机号"
            android:gravity="center"
            android:textColorHint="@color/blueGrey"
            android:background="@drawable/shape_corner"
            android:layout_marginTop="20dp"
            ></EditText>
        <EditText
            android:id="@+id/re_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/re_account"
            android:inputType="numberPassword"
            android:background="@drawable/shape_corner"
            android:hint="密码"
            android:gravity="center"
            android:textColorHint="@color/blueGrey"
            android:layout_marginTop="20dp"
            ></EditText>
        <EditText
            android:id="@+id/cf_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/re_password"
            android:inputType="numberPassword"
            android:background="@drawable/shape_corner"
            android:hint="确认密码"
            android:gravity="center"
            android:textColorHint="@color/blueGrey"
            android:layout_marginTop="20dp"
            ></EditText>
        <Button
            android:id="@+id/btn_re_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_corner_lightblue"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cf_password"
            android:layout_marginTop="20dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"></Button>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_name"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"></TextView>
</RelativeLayout>
